<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="ground_and_go.Pages.Auth.ForgotPasswordPopup"
               Color="Transparent">
    <Border StrokeShape="RoundRectangle 20"
            Stroke="LightGray"
            BackgroundColor="White"
            Padding="25"
            WidthRequest="320">

        <VerticalStackLayout Spacing="15">
            <Label Text="Forgot Password"
                   FontSize="22"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="Black"/>

            <Label x:Name="ValueLabel"
                   HorizontalOptions="Center"
                   FontSize="18"
                   FontAttributes="Italic"
                   TextColor="#2196F3"
                   Text="If an account exists, a recovery email will be sent."/>

            <Border Grid.Row="1"
                    x:Name="UsernameBorder"
                    Stroke="LightGray"
                    StrokeThickness="1"
                    BackgroundColor="White"
                    Margin="0,0,0,10"
                    HeightRequest="70">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black"
                            Offset="3,3"
                            Opacity="0.2"/>
                </Border.Shadow>
                <Grid ColumnDefinitions="*,Auto"
                      Padding="10"
                      Margin="0,0,10,0">
                    <VerticalStackLayout Grid.Column="0"
                                         VerticalOptions="Center"
                                         Spacing="2">
                        <Entry x:Name="UsernameENT"
                               Text=""
                               Placeholder="Email"
                               FontSize="24"
                               Keyboard="Email"
                               TextTransform="None"/>
                    </VerticalStackLayout>
                </Grid>
            </Border>


            <Grid ColumnDefinitions="*,*"
                  ColumnSpacing="10"
                  Margin="0,10,0,0">
                <Button Grid.Column="0"
                        Text="Cancel"
                        FontSize="18"
                        Clicked="OnCancel_Clicked"
                        BackgroundColor="Gray"
                        TextColor="White"/>
                <Button Grid.Column="1"
                        Text="Submit"
                        FontSize="18"
                        Clicked="OnSubmit_Clicked"
                        BackgroundColor="#2196F3"
                        TextColor="White"/>
            </Grid>
        </VerticalStackLayout>
    </Border>
</toolkit:Popup>