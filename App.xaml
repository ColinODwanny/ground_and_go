<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ground_and_go"
             x:Class="ground_and_go.App">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="MoodButtonStyle" TargetType="Button">
                <Setter Property="WidthRequest" Value="115" />  
                <Setter Property="HeightRequest" Value="42" />  
                <Setter Property="BackgroundColor" Value="#F3F4F6" />
                <Setter Property="TextColor" Value="#333" />
                <Setter Property="CornerRadius" Value="20" />
                <Setter Property="Padding" Value="10,5" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="BorderColor" Value="#E0E0E0" />
                <Setter Property="BorderWidth" Value="1" />
                <Setter Property="Margin" Value="5" />          
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
