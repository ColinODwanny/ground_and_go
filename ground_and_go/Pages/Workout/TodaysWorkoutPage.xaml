<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ground_and_go.Pages.WorkoutGeneration.TodaysWorkoutPage"
             Title="Today's Activity"
             BackgroundColor="#F0F0F0">

    <ScrollView>
        <VerticalStackLayout Spacing="12" Padding="20">
            
            <Label x:Name="ProgressStepLabel" Text="Step 4" FontAttributes="Bold" TextColor="Gray" />
            <ProgressBar x:Name="FlowProgressBar" Progress="0.0" />

            <Border x:Name="SquatBorder"
                    Stroke="LightGray"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 12"
                    BackgroundColor="White"
                    HeightRequest="70">
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="3,3" Opacity="0.1" />
                </Border.Shadow>
                
                <Grid ColumnDefinitions="*,Auto" Padding="10" Margin="0,0,10,0">
                    <VerticalStackLayout Grid.Column="0" VerticalOptions="Center" Spacing="2">
                        <Label Text="Squat" FontSize="20" FontAttributes="Bold" TextColor="Black"/>
                        <Label Text="3 sets × 12 reps" FontSize="16" TextColor="DarkGray"/>
                    </VerticalStackLayout>
                    
                    <Button Grid.Column="1"
                            Text="Begin"
                            BackgroundColor="#2196F3"
                            TextColor="White"
                            CornerRadius="15"
                            WidthRequest="90"
                            HeightRequest="40"
                            FontSize="16"
                            Clicked="OnBeginExerciseClicked"
                            CommandParameter="Squat"/>
                </Grid>
            </Border>

            <Border x:Name="BenchPressBorder"
                    Stroke="LightGray"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 12"
                    BackgroundColor="White"
                    HeightRequest="70">
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="3,3" Opacity="0.1" />
                </Border.Shadow>
                
                <Grid ColumnDefinitions="*,Auto" Padding="10" Margin="0,0,10,0">
                    <VerticalStackLayout Grid.Column="0" VerticalOptions="Center" Spacing="2">
                        <Label Text="Bench Press" FontSize="20" FontAttributes="Bold" TextColor="Black"/>
                        <Label Text="3 sets × 8 reps" FontSize="16" TextColor="DarkGray"/>
                    </VerticalStackLayout>
                    
                    <Button Grid.Column="1"
                            Text="Begin"
                            BackgroundColor="#2196F3"
                            TextColor="White"
                            CornerRadius="15"
                            WidthRequest="90"
                            HeightRequest="40"
                            FontSize="16"
                            Clicked="OnBeginExerciseClicked"
                            CommandParameter="Bench Press"/>
                </Grid>
            </Border>

            <Border x:Name="DeadliftBorder"
                    Stroke="LightGray"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 12"
                    BackgroundColor="White"
                    HeightRequest="70">
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="3,3" Opacity="0.1" />
                </Border.Shadow>
                
                <Grid ColumnDefinitions="*,Auto" Padding="10" Margin="0,0,10,0">
                    <VerticalStackLayout Grid.Column="0" VerticalOptions="Center" Spacing="2">
                        <Label Text="Deadlift" FontSize="20" FontAttributes="Bold" TextColor="Black"/>
                        <Label Text="3 sets × 8 reps" FontSize="16" TextColor="DarkGray"/>
                    </VerticalStackLayout>
                    
                    <Button Grid.Column="1"
                            Text="Begin"
                            BackgroundColor="#2196F3"
                            TextColor="White"
                            CornerRadius="15"
                            WidthRequest="90"
                            HeightRequest="40"
                            FontSize="16"
                            Clicked="OnBeginExerciseClicked"
                            CommandParameter="Deadlift"/>
                </Grid>
            </Border>

            <Border x:Name="PullUpBorder"
                    Stroke="LightGray"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 12"
                    BackgroundColor="White"
                    HeightRequest="70">
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="3,3" Opacity="0.1" />
                </Border.Shadow>
                
                <Grid ColumnDefinitions="*,Auto" Padding="10" Margin="0,0,10,0">
                    <VerticalStackLayout Grid.Column="0" VerticalOptions="Center" Spacing="2">
                        <Label Text="Pull-Up" FontSize="20" FontAttributes="Bold" TextColor="Black"/>
                        <Label Text="3 sets × 6 reps" FontSize="16" TextColor="DarkGray"/>
                    </VerticalStackLayout>
                    
                    <Button Grid.Column="1"
                            Text="Begin"
                            BackgroundColor="#2196F3"
                            TextColor="White"
                            CornerRadius="15"
                            WidthRequest="90"
                            HeightRequest="40"
                            FontSize="16"
                            Clicked="OnBeginExerciseClicked"
                            CommandParameter="Pull-Up"/>
                </Grid>
            </Border>

            <Border x:Name="ShoulderPressBorder"
                    Stroke="LightGray"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 12"
                    BackgroundColor="White"
                    HeightRequest="70">
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="3,3" Opacity="0.1" />
                </Border.Shadow>
                
                <Grid ColumnDefinitions="*,Auto" Padding="10" Margin="0,0,10,0">
                    <VerticalStackLayout Grid.Column="0" VerticalOptions="Center" Spacing="2">
                        <Label Text="Shoulder Press" FontSize="20" FontAttributes="Bold" TextColor="Black"/>
                        <Label Text="3 sets × 10 reps" FontSize="16" TextColor="DarkGray"/>
                    </VerticalStackLayout>
                    
                    <Button Grid.Column="1"
                            Text="Begin"
                            BackgroundColor="#2196F3"
                            TextColor="White"
                            CornerRadius="15"
                            WidthRequest="90"
                            HeightRequest="40"
                            FontSize="16"
                            Clicked="OnBeginExerciseClicked"
                            CommandParameter="Shoulder Press"/>
                </Grid>
            </Border>

            <Button 
                Text="Complete Workout"
                BackgroundColor="#4CAF50"
                TextColor="White"
                CornerRadius="20"
                HeightRequest="50"
                FontSize="18"
                FontAttributes="Bold"
                Margin="0,20,0,10"
                Clicked="OnCompleteWorkout_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>