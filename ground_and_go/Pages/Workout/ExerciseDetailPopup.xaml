<?xml version="1.0" encoding="utf-8" ?>
<!--Aidan Trusky-->
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="ground_and_go.Pages.WorkoutGeneration.ExerciseDetailPopup"
             Color="Transparent">

    <Border StrokeShape="RoundRectangle 20"
            Stroke="LightGray"
            BackgroundColor="White"
            Padding="25"
            WidthRequest="300"
            HeightRequest="200">

        <VerticalStackLayout Spacing="20">
            <Label x:Name="ExerciseTitle"
                Text="Exercise Name"
                FontSize="22"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                TextColor="Black"/>

            <Button Text="View Exercise"
                BackgroundColor="White"
                TextColor="DarkGray"
                BorderColor="DarkGray"
                BorderWidth="1"
                CornerRadius="10"
                HeightRequest="45"
                FontSize="16"
                HorizontalOptions="FillAndExpand"/>

            <Button x:Name="CompleteButton"
                Text="Mark Exercise as Complete"
                BackgroundColor="#4CAF50"
                TextColor="White"
                CornerRadius="10"
                HeightRequest="45"
                FontSize="16"
                HorizontalOptions="FillAndExpand"
                Clicked="OnComplete_Clicked"/>
        </VerticalStackLayout>
    </Border>
</toolkit:Popup>