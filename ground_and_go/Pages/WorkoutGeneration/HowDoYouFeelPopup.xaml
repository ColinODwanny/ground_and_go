<?xml version="1.0" encoding="utf-8" ?>
<!--this is the pop up toolkit, not a content page, so define it here and make it transparent-->
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="ground_and_go.Pages.WorkoutGeneration.HowDoYouFeelPopup"
             Color="Transparent">

    <!--create the actual window that holds the content-->
    <Border StrokeShape="RoundRectangle 20"
            Stroke="LightGray"
            BackgroundColor="White"
            Padding="25"
            WidthRequest="320">

        <!--make it vertical, home-slice-->
        <VerticalStackLayout Spacing="15">
            <Label 
                Text="How do you feel?"
                FontSize="22"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                TextColor="Black"/>

            <Label HorizontalOptions="Center"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="#2196F3"
                   Text="{Binding Source={x:Reference RatingSlider}, 
                                  Path=Value, 
                                  StringFormat='{0:F0}'}" />
            <!--cool slider-->
            <Slider x:Name="RatingSlider"
                    Minimum="1"
                    Maximum="10.00" Value="5" />

            <Label 
                Text="Describe your mood:"
                FontSize="16"
                TextColor="DarkGray"/>

            <!--flex wrap makes the text radio buttons flow to next line if screen is too narrow-->
            <FlexLayout x:Name="MoodFlexLayout" Wrap="Wrap" JustifyContent="SpaceEvenly">
                <RadioButton Content="😀 Happy" GroupName="Mood" Value="Happy" IsChecked="True"/>
                <RadioButton Content="😊 Content" GroupName="Mood" Value="Content"/>
                <RadioButton Content="😐 Neutral" GroupName="Mood" Value="Neutral"/>
                <RadioButton Content="😟 Worried" GroupName="Mood" Value="Worried"/>
                <RadioButton Content="😢 Sad" GroupName="Mood" Value="Sad"/>
                <RadioButton Content="😠 Angry" GroupName="Mood" Value="Angry"/>
            </FlexLayout>

            <!--create grid to make cancel and submit buttons side by side-->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,10,0,0">
                <Button Grid.Column="0" Text="Cancel" Clicked="OnCancel_Clicked" BackgroundColor="Gray" TextColor="White"/>
                <Button Grid.Column="1" Text="Submit" Clicked="OnSubmit_Clicked" BackgroundColor="#2196F3" TextColor="White"/>
            </Grid>
        </VerticalStackLayout>
    </Border>
</toolkit:Popup>