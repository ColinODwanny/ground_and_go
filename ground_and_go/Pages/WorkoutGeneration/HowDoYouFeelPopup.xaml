<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="ground_and_go.Pages.WorkoutGeneration.HowDoYouFeelPopup"
               Color="Transparent">

    <Border StrokeShape="RoundRectangle 20"
            Stroke="LightGray"
            BackgroundColor="White"
            Padding="25"
            WidthRequest="320">

        <VerticalStackLayout Spacing="15">
            <Label Text="How do you feel?"
                   FontSize="22"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="Black" />

            <Label x:Name="ValueLabel"
                   HorizontalOptions="Center"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="#2196F3"
                   Text="{Binding Source={x:Reference RatingSlider}, 
                                  Path=Value, 
                                  StringFormat='{0:F0}'}" />

            <Slider x:Name="RatingSlider"
                    Minimum="1"
                    Maximum="10"
                    Value="5"
                    MinimumTrackColor="#2196F3"
                    ThumbColor="#2196F3"
                    />

            <Label Text="Describe your mood:"
                   FontSize="16"
                   TextColor="DarkGray"
                   HorizontalOptions="Center"
                   
                   />

            <!-- Flex layout of pill buttons -->
            <FlexLayout x:Name="MoodFlexLayout"
            Wrap="Wrap"
            JustifyContent="Center"
            AlignItems="Center"
            Direction="Row">

                <Button Text="Happy" Clicked="OnMoodClicked" Style="{StaticResource MoodButtonStyle}" Margin="5" x:Name="Happy"/>
                <Button Text="Energized" Clicked="OnMoodClicked" Style="{StaticResource MoodButtonStyle}" Margin="5"/>
                <Button Text="Neutral" Clicked="OnMoodClicked" Style="{StaticResource MoodButtonStyle}" Margin="5"/>
                <Button Text="Anxious" Clicked="OnMoodClicked" Style="{StaticResource MoodButtonStyle}" Margin="5"/>
                <Button Text="Sad" Clicked="OnMoodClicked" Style="{StaticResource MoodButtonStyle}" Margin="5"/>
                <Button Text="Angry" Clicked="OnMoodClicked" Style="{StaticResource MoodButtonStyle}" Margin="5"/>
                <Button Text="Depressed" Clicked="OnMoodClicked" Style="{StaticResource MoodButtonStyle}" Margin="5"/>
                <Button Text="Tired" Clicked="OnMoodClicked" Style="{StaticResource MoodButtonStyle}" Margin="5"/>
            </FlexLayout>


            <Grid ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,10,0,0">
                <Button Grid.Column="0"
                        Text="Cancel"
                        Clicked="OnCancel_Clicked"
                        BackgroundColor="Gray"
                        TextColor="White" />
                <Button Grid.Column="1"
                        Text="Submit"
                        Clicked="OnSubmit_Clicked"
                        BackgroundColor="#2196F3"
                        TextColor="White" />
            </Grid>
        </VerticalStackLayout>
    </Border>
</toolkit:Popup>
