<?xml version="1.0" encoding="utf-8" ?>
<!-- Devlin Delegard -->
<!--this is the pop up toolkit, not a content page, so define it here and make it transparent-->
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="ground_and_go.Pages.WorkoutGeneration.WorkoutOptionsPopup"
               Color="Transparent">

    <!--create the actual window that holds the content-->
    <Border StrokeShape="RoundRectangle 20"
            Stroke="LightGray"
            BackgroundColor="White"
            Padding="25"
            WidthRequest="320">

        <!--make it vertical, home-slice-->

        <VerticalStackLayout Spacing="15">
            <Label
            Text="Home or Gym?"
            FontSize="22"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            TextColor="Black"
            Margin="0,10,0,20"/>

            <HorizontalStackLayout Spacing="15">
                <CheckBox
                    x:Name="HomeCheckbox"
                    HorizontalOptions="Start"/>


                <Label HorizontalOptions="Start"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="Black"
                       Text="Home"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="15">
                <CheckBox
                    x:Name="GymCheckbox"
                    HorizontalOptions="Start"/>

                <Label HorizontalOptions="Start"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="Black"
                       Text="Gym"/>
            </HorizontalStackLayout>




            <Button Text="Submit"
                    Clicked="OnSubmit_Clicked"
                    BackgroundColor="#2196F3"
                    TextColor="White"/>
        </VerticalStackLayout>
    </Border>
</toolkit:Popup>