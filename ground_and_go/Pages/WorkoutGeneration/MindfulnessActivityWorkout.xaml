<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ground_and_go.Pages.WorkoutGeneration.MindfulnessActivityWorkoutPage"
             Title="Mindfulness Activity"
             BackgroundColor="#F0F0F0">

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20">

            <Label x:Name="ProgressStepLabel" Text="Step 3" FontAttributes="Bold" TextColor="Gray" />
            <ProgressBar x:Name="FlowProgressBar" Progress="0.0" />

            <Border Stroke="LightGray"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 12"
                    BackgroundColor="White"
                    Padding="15">
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="3,3" Opacity="0.1" />
                </Border.Shadow>
                <VerticalStackLayout Spacing="8">
                    <Label Text="Step 1" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="#2196F3"/>
                    <Label Text="Sit or lie comfortably, close your eyes, and take a few deep, grounding breaths."
                           FontSize="16"
                           TextColor="Black"
                           LineBreakMode="WordWrap"/>
                </VerticalStackLayout>
            </Border>

            <Border Stroke="LightGray"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 12"
                    BackgroundColor="White"
                    Padding="15">
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="3,3" Opacity="0.1" />
                </Border.Shadow>
                <VerticalStackLayout Spacing="8">
                    <Label Text="Step 2" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="#2196F3"/>
                    <Label Text="Visualize a soft, warm light above your head. With each inhale, imagine it gently flowing into your body."
                           FontSize="16"
                           TextColor="Black"
                           LineBreakMode="WordWrap"/>
                </VerticalStackLayout>
            </Border>

            <Border Stroke="LightGray"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 12"
                    BackgroundColor="White"
                    Padding="15">
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="3,3" Opacity="0.1" />
                </Border.Shadow>
                <VerticalStackLayout Spacing="8">
                    <Label Text="Step 3" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="#2196F3"/>
                    <Label Text="Picture the light filling your heart, chest, and mind â€” a small spark of calm and hope."
                           FontSize="16"
                           TextColor="Black"
                           LineBreakMode="WordWrap"/>
                </VerticalStackLayout>
            </Border>

            <Border Stroke="LightGray"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 12"
                    BackgroundColor="White"
                    Padding="15">
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="3,3" Opacity="0.1" />
                </Border.Shadow>
                <VerticalStackLayout Spacing="8">
                    <Label Text="Step 4" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="#2196F3"/>
                    <Label Text="If you feel safe, imagine it expanding around you like a bubble of support, holding you gently."
                           FontSize="16"
                           TextColor="Black"
                           LineBreakMode="WordWrap"/>
                </VerticalStackLayout>
            </Border>

            <Border Stroke="LightGray"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 12"
                    BackgroundColor="White"
                    Padding="15">
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="3,3" Opacity="0.1" />
                </Border.Shadow>
                <VerticalStackLayout Spacing="8">
                    <Label Text="Step 5" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="#2196F3"/>
                    <Label Text="Repeat silently: 'I am held. I am safe. I can rest in this light.'"
                           FontSize="16"
                           TextColor="Black"
                           LineBreakMode="WordWrap"/>
                </VerticalStackLayout>
            </Border>

            <Button Text="All Done"
                    CornerRadius="20"
                    HeightRequest="50"
                    FontSize="18"
                    FontAttributes="Bold"
                    Margin="0,20,0,10"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    Clicked="OnNext_Clicked"/>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>