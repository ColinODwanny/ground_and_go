<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ground_and_go.Pages.WorkoutGeneration.MindfulnessActivityRestPage"
             Title="Mindfulness Activity"
             BackgroundColor="#F0F0F0">

    <Grid RowDefinitions="Auto,*,Auto"
          Padding="20">

        <VerticalStackLayout Grid.Row="0" Spacing="6">
            <Label x:Name="ProgressStepLabel"
                   Text="Step 3 of 5"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="#6A6A6A"/>

            <ProgressBar x:Name="FlowProgressBar"
                         Progress="0.4"
                         HeightRequest="8"
                         BackgroundColor="#DADADA"
                         ProgressColor="#4CAF50"/>
        </VerticalStackLayout>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="20">

                <Border Margin="10,43,10,0"
                        Stroke="Transparent"
                        StrokeShape="RoundRectangle 16"
                        BackgroundColor="{AppThemeBinding Light=White, Dark=#2A2A2A}"
                        Padding="20">
                    
                    <Border.Shadow>
                        <Shadow Brush="Black" Offset="0,5" Opacity="0.2" Radius="5"/>
                    </Border.Shadow>

                    <VerticalStackLayout Spacing="14">
                        <Label x:Name="ActivityNameLabel"
                               Text="Today's Mindfulness Activity"
                               FontSize="22"
                               HorizontalTextAlignment="Center"
                               FontAttributes="Bold"/>

                        <Label x:Name="ActivityDescriptionLabel"
                               Text="Most Activities are Best Experienced with Headphones."
                               FontSize="16"
                               TextColor="#555"
                               HorizontalTextAlignment="Center"
                               LineBreakMode="WordWrap"/>

                        <Button x:Name="YouTubeBtn"
                                Text="Start Activity"
                                Clicked="OnOpenYoutubeClicked"
                                HeightRequest="48"
                                CornerRadius="12"
                                BackgroundColor="#FF93B87C"
                                TextColor="White"/>
                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>

        <Button Grid.Row="2"
                Text="Continue"
                HeightRequest="56"
                CornerRadius="16"
                FontSize="18"
                FontAttributes="Bold"
                Margin="0,8,0,8"
                BackgroundColor="#2196F3"
                TextColor="White"
                Clicked="OnNext_Clicked"/>
    </Grid>
</ContentPage>