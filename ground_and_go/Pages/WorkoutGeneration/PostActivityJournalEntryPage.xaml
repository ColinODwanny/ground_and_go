<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ground_and_go.Pages.WorkoutGeneration.PostActivityJournalEntryPage"
             Title="Journal Entry">
    
    <Grid RowDefinitions="Auto, Auto, *, Auto"
          RowSpacing="10"
          Padding="20">

        <Label x:Name="ProgressStepLabel" 
               Text="Final Step" 
               FontAttributes="Bold" 
               TextColor="Gray" 
               Grid.Row="0" />
        
        <ProgressBar x:Name="FlowProgressBar" 
                     Progress="0.0" 
                     Grid.Row="1" />

        <Editor x:Name="JournalEditor"
                Placeholder="Write about your activity, how you feel now, or anything else on your mind..."
                FontSize="18"
                AutoSize="TextChanges"
                Grid.Row="2" /> <Button Text="Finish"
                CornerRadius="20"
                Margin="0,10,0,0"
                BackgroundColor="#2196F3"
                TextColor="White"
                Clicked="OnFinish_Clicked"
                Grid.Row="3" />
        
    </Grid>
</ContentPage>