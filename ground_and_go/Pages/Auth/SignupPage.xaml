<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ground_and_go.Pages.Auth.SignupPage"
             Title="Signup"
             Shell.NavBarIsVisible="False">
    <Grid Padding="20" RowSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

            <!-- Ground and Go Logo -->

            <Image
                Source="ground_and_go/Resources/Images/black_and_white.webp"
                Grid.Row="0"
                HeightRequest="500"
                Aspect="AspectFit"
                />

            <!-- Username -->

            <Border Grid.Row="1"
                    x:Name="UsernameBorder"
                    Stroke="LightGray"
                    StrokeThickness="1"
                    BackgroundColor="White"
                    HeightRequest="70">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="3,3" Opacity="0.2" />
                </Border.Shadow>
                
                <Grid ColumnDefinitions="*,Auto" Padding="10" Margin="0,0,10,0">
                    <VerticalStackLayout Grid.Column="0" VerticalOptions="Center" Spacing="2">
                        <Entry x:Name="UsernameENT" Text="" Placeholder="Create Username" FontSize="24"/>
                    </VerticalStackLayout>
                </Grid>
            </Border>

            <!-- Password -->

            <Border Grid.Row="2"
                    x:Name="PasswordBorder"
                    Stroke="LightGray"
                    StrokeThickness="1"
                    BackgroundColor="White"
                    HeightRequest="70">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="3,3" Opacity="0.2" />
                </Border.Shadow>
                
                <Grid ColumnDefinitions="*,Auto" Padding="10" Margin="0,0,10,0">
                    <VerticalStackLayout Grid.Column="0" VerticalOptions="Center" Spacing="2">
                        <Entry x:Name="PasswordENT" Text="" Placeholder="Create Password" FontSize="24"/>
                    </VerticalStackLayout>
                </Grid>
            </Border>

            <!-- Repeat Password -->

            <Border Grid.Row="3"
                    x:Name="RepeatPasswordBorder"
                    Stroke="LightGray"
                    StrokeThickness="1"
                    BackgroundColor="White"
                    HeightRequest="70">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="3,3" Opacity="0.2" />
                </Border.Shadow>
                
                <Grid ColumnDefinitions="*,Auto" Padding="10" Margin="0,0,10,0">
                    <VerticalStackLayout Grid.Column="0" VerticalOptions="Center" Spacing="2">
                        <Entry x:Name="RepeatPasswordENT" Text="" Placeholder="Re-enter Password" FontSize="24"/>
                    </VerticalStackLayout>
                </Grid>
            </Border>

            <!-- Sign Up Button -->

            <Button 
                Grid.Row="4"
                Text="Sign Up"
                BackgroundColor="Black"
                TextColor="White"
                CornerRadius="20"
                HeightRequest="50"
                FontSize="18"
                FontAttributes="Bold"
                Clicked="SignupClicked"
                Margin="0,50,0,10"/>

    </Grid>
</ContentPage>