<?xml version="1.0" encoding="utf-8" ?>
<!--Aidan Trusky-->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             x:Class="ground_and_go.Pages.Profile.ProfilePage"
             Title="Profile"
             BackgroundColor="#F0F0F0">

    <ScrollView>
        
        <VerticalStackLayout Spacing="0" Padding="0" VerticalOptions="Start">

            <!-- My Workouts -->
            <Border Stroke="LightGray"
                    StrokeThickness="1"
                    BackgroundColor="White"
                    HeightRequest="80"
                    Margin="0,0,0,1">
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="0,2" Opacity="0.1" />
                </Border.Shadow>
                
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnMyWorkoutsTapped" />
                </Border.GestureRecognizers>

                <!-- width column "60" instead of "Auto" to prevent collapse -->
                <Grid ColumnDefinitions="60,*" Padding="20,0">
                    <Image Grid.Column="0"
                           Source="{mi:Material MonitorHeart, IconColor=Black, IconSize=32}"
                           HeightRequest="32"
                           WidthRequest="32"
                           Aspect="AspectFit"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"/>
                    
                    <Label Grid.Column="1"
                           Text="My Workouts"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="Black"
                           VerticalOptions="Center"
                           Margin="10,0,0,0"/>
                </Grid>
            </Border>

            <!-- My Journal Entries -->
            <Border Stroke="LightGray"
                    StrokeThickness="1"
                    BackgroundColor="White"
                    HeightRequest="80"
                    Margin="0,0,0,1">
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="0,2" Opacity="0.1" />
                </Border.Shadow>

                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnMyJournalEntriesTapped" />
                </Border.GestureRecognizers>
                
                <Grid ColumnDefinitions="60,*" Padding="20,0">
                    <Image Grid.Column="0"
                           Source="{mi:Material AutoStories, IconColor=Black, IconSize=32}"
                           HeightRequest="32"
                           WidthRequest="32"
                           Aspect="AspectFit"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"/>
                    
                    <Label Grid.Column="1"
                           Text="My Journal Entries"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="Black"
                           VerticalOptions="Center"
                           Margin="10,0,0,0"/>
                </Grid>
            </Border>

            <!-- Logout -->
            <Border Stroke="LightGray"
                    StrokeThickness="1"
                    BackgroundColor="White"
                    HeightRequest="80">
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="0,2" Opacity="0.1" />
                </Border.Shadow>

                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnLogoutTapped" />
                </Border.GestureRecognizers>
                
                <Grid ColumnDefinitions="60,*" Padding="20,0">
                    <Image Grid.Column="0"
                           Source="{mi:Material Logout, IconColor=Black, IconSize=32}"
                           HeightRequest="32"
                           WidthRequest="32"
                           Aspect="AspectFit"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"/>
                    
                    <Label Grid.Column="1"
                           Text="Logout"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="Black"
                           VerticalOptions="Center"
                           Margin="10,0,0,0"/>
                </Grid>
            </Border>

            <Border Stroke="Red"
                    StrokeThickness="1"
                    BackgroundColor="#FFF0F0"
                    HeightRequest="80"
                    Margin="0,20,0,20"> <Border.Shadow>
                    <Shadow Brush="Red" Offset="0,2" Opacity="0.1" />
                </Border.Shadow>

                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnDeleteAccountTapped" />
                </Border.GestureRecognizers>

                <Grid ColumnDefinitions="60,*" Padding="20,0">
                    <Image Grid.Column="0"
                           Source="{mi:Material Delete, IconColor=Red, IconSize=32}"
                           HeightRequest="32"
                           WidthRequest="32"
                           Aspect="AspectFit"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"/>

                    <Label Grid.Column="1"
                           Text="Delete Account"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="Red"
                           VerticalOptions="Center"
                           Margin="10,0,0,0"/>
                </Grid>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>