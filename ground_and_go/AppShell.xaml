<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ground_and_go.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:home="clr-namespace:ground_and_go.Pages.Home"
    xmlns:profile="clr-namespace:ground_and_go.Pages.Profile"
    xmlns:workout="clr-namespace:ground_and_go.Pages.Workout"
    xmlns:workoutgen="clr-namespace:ground_and_go.Pages.WorkoutGeneration"
    xmlns:login="clr-namespace:ground_and_go.Pages.Auth"
    xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
    Title="ground_and_go">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate login:LoginPage}"
        Route="login"
        Shell.TabBarIsVisible="False" />
    
<TabBar Route="main">
        <Tab Title="Home" Icon="{mi:Material Home}">
            <ShellContent ContentTemplate="{DataTemplate home:HomePage}" Route="home" />
        </Tab>

        <Tab Title="Workout" Icon="{mi:Material FitnessCenter}">
            <ShellContent ContentTemplate="{DataTemplate workoutgen:TodaysWorkoutPage}" Route="workout" />
        </Tab>

        <Tab Title="Profile" Icon="{mi:Material AccountCircle}">
            <ShellContent ContentTemplate="{DataTemplate profile:ProfilePage}" Route="profile" />
        </Tab>
    </TabBar>

</Shell>
