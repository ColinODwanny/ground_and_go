<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ground_and_go.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:ground_and_go.Pages"
    xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
    Title="ground_and_go">

    <TabBar>
        <Tab Title="Home" Icon="{mi:Material Home}">
            <ShellContent ContentTemplate="{DataTemplate pages:MainPage}" />
        </Tab>

        <Tab Title="Workout Equipment" Icon="{mi:Material FitnessCenter}">
            <ShellContent ContentTemplate="{DataTemplate pages:WorkoutEquipmentPage}" />
        </Tab>
    </TabBar>

</Shell>